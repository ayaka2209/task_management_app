<%= form_with(model: @task, local: true) do |form| %>
<% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="task_title">
  <%= form.label :タイトル %>
  <%= form.text_field :title %>
</div>
<div class="task_content">
  <%= form.label :詳細 %>
  <%= form.text_field :content %>
</div>
<div class="task_expired">
  <%= form.label :終了期限 %>
  <%= form.date_field :expired_at %>
</div>

<div class="task_status">
  <%= form.label :ステータス %>
  <%= form.select :status, Task.statuses.keys.to_a,{prompt: "選択してください"} %>
</div>

<div class="task_priority">
  <%= form.label :優先順位 %>
  <%= form.select :priority, Task.priorities.keys.to_a,{prompt: "選択してください"} %>
</div>

<div class="label_priority">
  <%= form.label :ラベル %>
  <%= form.select :priority, Task.labels.keys.to_a,{prompt: "選択してください"} %>
</div>

<%= form.submit %>
<% end %>