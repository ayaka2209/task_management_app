<h1>管理画面ユーザー一覧</h1>

<%= link_to "新規登録", new_admin_user_path, class: "btn btn-danger" %>

<table class="table table-striped">
  <tr>
    <th>name</th>
    <th>ID</th>
    <th>email</th>
    <th>admin</th>
    <th>tasks_number</th>
	</tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.user_name, [:admin, user] %></td>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
    <td><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-outline-secondary" %></td>
    <td><%= link_to '削除', [:admin, user], method: :delete ,data: { confirm: "本当に削除してもいいですか?" }, class: "btn btn-outline-success" %></td>
	</tr>
<% end %>
</table>